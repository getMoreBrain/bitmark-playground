{
  "name": "@gmb/bitmark-playground",
  "version": "0.2.0",
  "description": "A web playground for parsing and generating bitmark",
  "author": "Get More Brain Ltd",
  "license": "ISC",
  "homepage": "https://getmorebrain.github.io/bitmark-playground",
  "scripts": {
    "preinstall": "npx only-allow bun",
    "start": "bun run generate-build-info && vite",
    "build": "bun run generate-build-info && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "generate-build-info": "node ./scripts/generate-build-info.js",
    "ncu": "bunx npm-check-updates -i",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@types/lodash": "^4.17.16",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@uidotdev/usehooks": "^2.4.0",
    "lodash": "^4.17.21",
    "monaco-editor": "^0.52.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-monaco-editor": "^0.59.0",
    "theme-ui": "^0.16.1",
    "typescript": "^5.2.2",
    "valtio": "^1.11.3",
    "web-tree-sitter": "^0.25.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@gmb/bitmark-parser": "^3.0.3",
    "@gmb/bitmark-parser-generator": "^1.5.28",
