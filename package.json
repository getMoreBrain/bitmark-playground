    "@types/lodash": "^4.17.16",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@uidotdev/usehooks": "^2.4.0",
    "lodash": "^4.17.21",
    "monaco-editor": "^0.44.0",
